@import 'nib'

vendor-prefixes = webkit moz o ms official
help-red = #c52a33
help-orange = #f9ac2d
help-pink = #e2525b
help-master = 2.5rem

// Generales
@-ms-viewport
    width device-width

html
    box-sizing border-box
    font-size 16px
*
*:after
*:before
    margin 0
    padding 0
    box-sizing inherit
    transition all 0.3s ease
    &:hover
        transition all 0.3s ease
a
a:visited
a:focus
    text-decoration none
    color inherit
body
    font-family 'Open-sans',sans-serif
    font-size 1em
    width 100%
    max-width 100vw
    background radial-gradient(ellipse at center, #e2525b 4%,#c52a33 57%)
    background-image url(../img/background-people.png)
    background-blend-mode overlay
    background-color help-red
    height 100vh
    overflow hidden
    color white
h1
h2
h3
h4
h5
h6
    font-weight bolder
    margin 0
    padding 0
    font-family 'Trajan Pro'
img 
    width 100%
    max-width 100%

    
    
    
//Special Classes
.bold
    font-weight bolder
.left
    float left
.right
    float right
.cover
    background-attachment fixed
    background-position center center
    background-size cover
    background-repeat no-repeat
// Index

@keyframes heartbeat
{
  0%
  {
    transform: scale( .95 );
  }
  20%
  {
    transform: scale( 1 );
  }
  40%
  {
    transform: scale( .95 );
  }
  60%
  {
    transform: scale( 1 );
  }
  90%
  {
    transform: scale( .95 );
  }
  100%
  {
    transform: scale( .95 );
  }
}

section
    height 100vh
    width 100vw
    padding help-master
    text-align center
    position relative
    display flex
    align-items center
    justify-content center
    font-size 1.25rem
    .top-bar
        position absolute
        top help-master
        width 100vw
        padding 0 help-master
    .bottom-bar
        position absolute
        bottom help-master
        width 100vw
        padding 0 help-master
        .left
            position absolute
            bottom -2rem
            width 50vh !important
            .icon
                float left
                font-size 4rem
        .right
            p
                text-align right !important
            .form--container
                width 20rem
                border 2px solid white
                color white
                overflow auto
                .mail
                    float left
                    width calc(20rem - 2.5rem - 8px)
                .send
                    position relative
                    float right
                    height 2.5rem
                    width 2.5rem
                    cursor pointer
                    overflow hidden
                    background white
                    &:hover
                        i
                            transform rotate(1080deg)
                    input
                    i
                        position absolute
                        top 0
                        left 0
                        color help-red
                        font-size 3rem
                        &.icon-right
                            top -0.3rem
                            left -0.2rem
                            background white
            input
                text-align center
                background transparent
                border none
                width 100%
                height 100%
                &[type="email"]
                    padding 0.5rem 0
                &[type="submit"]
                    padding 0.5rem
                    z-index 999
    .main-image
        width 30vw
        height 30vw
        animation heartbeat 1.5s infinite
        

// Media Query
 
@media (max-width: 41.8125rem) //Desktop
    section
        .main-image
            width 50vw
            height 50vw
        .bottom-bar
            bottom 0
            .left
            .right
                float none
                position static !important
                .left--container
                    width 88vw
                .icon
                    width 25%
                p
                    text-align center !important
                .form--container
                    width 100%
                    form
                        width 100%
                        .mail
                            width calc(100% - 2.5rem - 8px)
                            
@media (max-width: 24.0625rem)
    section
        .top-bar
            .left
            .right
                float none